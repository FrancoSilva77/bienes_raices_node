extends ../layout/index

block contenido
  .py-5
    h1.text-4xl.my-10.font-extrabold.text-center Bienes
      span.font-normal Raíces
    h2.text-center.text-2xl.font-extrabold= pagina

    if errores 
      div(class="max-w-md mx-auto my-2")
        each error in errores
          p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

  .mt-8.mx-auto.max-w-md
    .bg-white.py-1.px-4.shadow
      form(method="POST" action="/auth/registro" noValidate).space-y-5
        input(type="hidden" name="_csrf" value= csrfToken)
        div 
          label(for="nombre").block.text-sm.uppercase.text-gray-500.mb-2.font-bold Tu Nombre
          input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')
        div 
          label(for="email").block.text-sm.uppercase.text-gray-500.mb-2.font-bold Email de Registro
          input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu email" type="email" name="email" value= usuario ? usuario.email : '')
        div 
          label(for="password").block.text-sm.uppercase.text-gray-500.mb-2.font-bold Contraseña
          input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Contraseña" type="password" name="password")
        div 
          label(for="repetir_password").block.text-sm.uppercase.text-gray-500.mb-2.font-bold Repetir Contraseña
          input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite tu Contraseña" type="password" name="repetir_password")

        .flex.items-center.justify-between 
          a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión 
          a.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi Password 

        input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")